<odoo>
    <!-- Snippets -->
    <template id="s_xmlrpc_base" name="XmlRpc Base">
        <section class="o_xmlrpc_base">
            <div class="container snippet-container">
                <section class="snippet-section">
                    <h3 class="snippet-section__heading">Aliments</h3>
                    <div class="snippet-section__results">
                        <form class="aliment-form">
                            <input type="text" class="aliment__input" placeholder="Aliment" />
                            <input type="submit" class="aliment__submit" value="Ajouter" />
                        </form>
                        <div class="aliment-list__container">
                            <ul class="aliment-list">
                                <li>En attente, téléchargement de la liste de végétaux</li>
                            </ul>
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </template>
    <!-- Add snippets to menu -->
    <template id="snippet_effect" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_effect']/div[hasclass('o_panel_body')]" position="inside">
            <t
                t-snippet="xmlrpc_base.s_xmlrpc_base"
                t-thumbnail="/xmlrpc_base/static/description/icon.png"
            />
        </xpath>
    </template>
    <!-- Add stylesheet and Javascript -->
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link
                rel="stylesheet"
                type="text/scss"
                href="/xmlrpc_base/static/src/scss/xmlrpc_base.scss"
            />
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script
                type="text/javascript"
                src="/xmlrpc_base/static/src/js/request-handler.js"
            />
            <script
                type="text/javascript"
                src="/xmlrpc_base/static/src/js/website.xmlrpc_base.animation.js"
            />
        </xpath>
    </template>
</odoo>
