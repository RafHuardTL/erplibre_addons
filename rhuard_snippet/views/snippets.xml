<odoo>
    <!-- Snippets -->
    <template id="s_rhuard_snippet" name="Rafaël Huard Snippet">
        <section class="o_rhuard_snippet">
            <div class="container rh-snippet__container">
                <h2 class="rh-snippet__heading">Défi snippet ERPLibre</h2>
                <section class="rh-snippet__section">
                    <h3 class="rh-snippet__section__heading">Objectif 1: Obtenir des données avec HTTP</h3>
                    <div class="rh-snippet__section__results rh-text__value__container">
                        <div class="text-center rh-text__value">Message</div>
                    </div>
                </section>
                <section class="rh-snippet__section">
                    <h3 class="rh-snippet__section__heading">Objectif 2: Obtenir une liste d'aliments</h3>
                    <div class="rh-snippet__section__results rh-aliment__list__container">
                        <ul class="rh-aliment__list"></ul>
                    </div>
                </section>
                <section class="rh-snippet__section">
                    <h3 class="rh-snippet__section__heading">Objectif 3: Pouvoir envoyer une requête POST</h3>
                    <div class="rh-snippet__section__results">
                        <form class="rh-add-aliment__form">
                            <input type="text" class="rh-add-aliment__input" placeholder="Aliment" />
                            <input type="submit" class="rh-add-aliment__submit" value="Envoyer" />
                        </form>
                        <div class="rh-add-aliment__list__container">
                            <ul class="rh-add-aliment__list"></ul>
                        </div>
                    </div>
                </section>
                <section class="rh-snippet__section">
                    <h3 class="rh-snippet__section__heading">Objectif 4: Pouvoir supprimer un aliment</h3>
                    <div class="rh-snippet__section__results">
                        <form class="rh-delete-aliment__form">
                            <input type="text" class="rh-delete-aliment__input" placeholder="Aliment" />
                            <input type="submit" class="rh-delete-aliment__submit" value="Envoyer" />
                        </form>
                        <div class="rh-delete-aliment__list__container">
                            <ul class="rh-delete-aliment__list"></ul>
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </template>
    <!-- Add snippets to menu -->
    <template id="snippet_effect" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_effect']/div[hasclass('o_panel_body')]" position="inside">
            <t
                t-snippet="rhuard_snippet.s_rhuard_snippet"
                t-thumbnail="/rhuard_snippet/static/description/icon.png"
            />
        </xpath>
    </template>
    <!-- Add stylesheet and Javascript -->
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link
                rel="stylesheet"
                type="text/scss"
                href="/rhuard_snippet/static/src/scss/rhuard_snippet.scss"
            />
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script
                type="text/javascript"
                src="/rhuard_snippet/static/src/js/website.rhuard_snippet.animation.js"
            />
        </xpath>
    </template>
</odoo>
